{
  "name": "python-smell-detector",
  "displayName": "Python Smell Detector",
  "description": "Detects Python code smells using Smelly Python",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "python-smell-detector.showReport",
        "title": "Show Smell Report"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run compile-tests",
    "compile-tests": "tsc -p . --outDir out",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^16.x",
    "@types/mocha": "^10.0.1",
    "@types/glob": "^8.1.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2",
    "glob": "^8.1.0",
    "mocha": "^10.2.0"
  }
}
